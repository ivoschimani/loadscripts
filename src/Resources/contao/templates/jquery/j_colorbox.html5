// Add the colorbox style sheet
$GLOBALS['TL_CSS'][] = 'assets/colorbox/css/colorbox.min.css|static';
$GLOBALS['TL_JAVASCRIPT'][] = 'assets/colorbox/js/colorbox.min.js|static';
